@page
@using DevNAS.Blogging.Localization
@using DevNAS.Blogging.Web.Pages.Posts
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<BloggingResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Post" asp-page="/Posts/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["EditPost"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
